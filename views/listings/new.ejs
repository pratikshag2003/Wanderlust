<%layout ("/layouts/boilerplate") -%>

<br><br/>
<h3>Create a New Listing </h3>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <form method="POST" 
     action="/listings" 
     novalidate 
     class="needs-validation"
     enctype="multipart/form-data"
     >
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
        name="listing[title]" 
        placeholder="Add a cachy title" 
        type="text" 
        class="form-control" required
        />
        <div class="valid-feedback">Title looks good</div>
        </div>
        
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description"type="text" class="form-control" required></textarea>
       </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]"
            type="file" 
             class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input 
                name="listing[price]" 
                class="form-control" 
                required />
            <div class="invalid-feedback">Enter The valid Price</div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input 
                name="listing[country]" 
                placeholder="India" 
                type="text"
                class="form-control" 
                required />
            <div class="invalid-feedback">Enter the valid country name </div>
</div>

        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
            name="listing[location]" 
            placeholder="Jaipur ,Rajasthan" 
            type="text" 
            class="form-control" 
            required/>
            <div class="invalid-feedback">Enter the  valid location name </div>
        </div>
        <button class ="btn btn-dark add-btn mt-3">Add</button>
        <br/><br/>
    </form>
</div>
</div>
</body>
</html>